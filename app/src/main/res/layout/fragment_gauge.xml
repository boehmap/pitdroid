<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.bonstead.pitdroid.GaugeView
            android:id="@+id/thermometer"
            app:scaleColor="@color/scaleColor"
            app:minValue="50"
            app:maxValue="350"
            app:tickValue="50"
            app:openTicks="2"
            app:subTicks="9"
            app:bezelColor2="#999a99"
            app:backgroundColor1="@color/gaugeBackground1"
            app:backgroundColor2="@color/gaugeBackground2"
            app:scaleFontSize="5"
            app:scaleOffset="13"
            app:rimSize="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.bonstead.pitdroid.GaugeHandView
            android:id="@+id/pitHand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.bonstead.pitdroid.GaugeHandView
            android:id="@+id/probe1Hand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:handColor="@color/probe1"
            app:handStyle="Tick"
            app:handLength="10"
            app:handWidth="10"/>
        <com.bonstead.pitdroid.GaugeHandView
            android:id="@+id/probe2Hand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:handColor="@color/probe2"
            app:handStyle="Tick"
            app:handLength="10"
            app:handWidth="10"/>
        <com.bonstead.pitdroid.GaugeHandView
            android:id="@+id/probe3Hand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:handColor="@color/probe3"
            app:handStyle="Tick"
            app:handLength="10"
            app:handWidth="10"/>
        <com.bonstead.pitdroid.GaugeHandView
            android:id="@+id/setPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:handColor="@android:color/holo_red_dark"
            app:handStyle="Rim"
            app:handLength="20"
            app:handWidth="30"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lastUpdate"/>
        <TextView
            android:id="@+id/lastUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"/>
    </LinearLayout>

    <Button
        android:text="Settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settingsButton"
        android:onClick="onSettingsClick"/>
    <Button
        android:text="Dash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dashButton"
        android:onClick="onDashClick"/>
    <Button
        android:text="Graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/graphButton"
        android:onClick="onGraphClick"/>

</LinearLayout>